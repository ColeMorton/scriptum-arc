{
  "name": "@zixly/root",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "npm@11.5.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "dev:frontend": "turbo run dev --filter=@zixly/frontend",
    "dev:backend": "turbo run dev --filter=@zixly/backend",
    "build": "turbo run build",
    "build:frontend": "turbo run build --filter=@zixly/frontend",
    "build:backend": "turbo run build --filter=@zixly/backend",
    "start": "turbo run start",
    "type-check": "turbo run type-check",
    "lint": "turbo run lint",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "prepare": "husky install",
    "db:generate": "turbo run db:generate --filter=@zixly/database",
    "db:migrate": "turbo run db:migrate --filter=@zixly/database",
    "db:studio": "turbo run db:studio --filter=@zixly/database",
    "db:seed": "turbo run db:seed --filter=@zixly/database",
    "db:reset": "turbo run db:reset --filter=@zixly/database",
    "test": "vitest run",
    "test:ui": "vitest run --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml,css,scss}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.37.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20",
    "@types/supertest": "^6.0.3",
    "@vitest/ui": "^3.2.4",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.4",
    "msw": "^2.11.5",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "turbo": "^2.3.3",
    "tsx": "^4.20.6",
    "typescript": "^5",
    "typescript-eslint": "^8.46.1",
    "vitest": "^3.2.4"
  }
}
