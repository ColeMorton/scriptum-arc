# Local Development Environment Template
# Copy this file to .env.local and update with your values

NODE_ENV=development

# Database Configuration (Host port: 5433, Container port: 5432)
POSTGRES_USER=zixly_admin
POSTGRES_PASSWORD=your_local_db_password
POSTGRES_DB=zixly_main

# pipeline Configuration
PIPELINE_BASIC_AUTH_ACTIVE=true
PIPELINE_BASIC_AUTH_USER=admin
PIPELINE_BASIC_AUTH_PASSWORD=your_pipeline_password
PIPELINE_DB_NAME=pipeline
PIPELINE_DB_USER=zixly_admin
PIPELINE_DB_PASSWORD=your_local_db_password

# Redis Configuration (Host port: 6380, Container port: 6379)
REDIS_URL=redis://:your_local_db_password@localhost:6380

# Plane Configuration
PLANE_SECRET_KEY=your_plane_secret_key
PLANE_DB_NAME=plane

# External Services (for testing)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_email_password

# Sentry Configuration (optional - for error tracking)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token
