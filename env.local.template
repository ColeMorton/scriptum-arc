# =============================================================================
# ZIXLY ENVIRONMENT TEMPLATE
# =============================================================================
# Copy this file to .env.local and update with your values
# This template contains ALL environment variables used across the application
# =============================================================================

# =============================================================================
# 1. APPLICATION CONFIGURATION
# =============================================================================

NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_pipeline_URL=http://localhost:5678

# =============================================================================
# 2. SUPABASE CONFIGURATION (Required)
# =============================================================================

NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here
SUPABASE_API_SECRET_KEY=your_supabase_api_secret_key_here
SUPABASE_PROJECT_ID=your_supabase_project_id_here

# =============================================================================
# 3. DATABASE CONFIGURATION
# =============================================================================

# Supabase Database (Required)
DATABASE_URL=postgresql://postgres:your_password@db.your-project-ref.supabase.co:5432/postgres?sslmode=require
DIRECT_URL=postgresql://postgres:your_password@db.your-project-ref.supabase.co:5432/postgres?sslmode=require

# Trading Database (REQUIRED - no default)
POSTGRES_PASSWORD=your_secure_postgres_password
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password
TRADING_DATABASE_URL=postgresql://trading_user:your_postgres_password@postgres:5432/trading_db

# =============================================================================
# 4. TRADING API CONFIGURATION
# =============================================================================

TRADING_API_URL=http://trading-api:8000
TRADING_API_KEY=dev-key-change-in-production
API_KEY_SECRET=dev-secret-key-change-in-production
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# 5. AWS / LOCALSTACK CONFIGURATION
# =============================================================================

AWS_ENDPOINT_URL=http://localstack:4566
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# SQS Queues
SQS_QUEUE_URL=http://localstack:4566/000000000000/trading-sweep-jobs
NOTIFICATIONS_QUEUE_URL=http://localstack:4566/000000000000/notifications

# S3 Buckets
S3_BUCKET_NAME=zixly-pipeline-data
TRADING_RESULTS_BUCKET=trading-results

# AWS Secrets Manager
TRADING_API_SECRET_NAME=trading-api-credentials
SMTP_SECRET_NAME=smtp-credentials
ZIXLY_DATABASE_SECRET_NAME=zixly-database-credentials

# =============================================================================
# 6. EMAIL / SMTP CONFIGURATION
# =============================================================================

# SMTP Settings
SMTP_HOST=smtp-mail.outlook.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@yourdomain.com

# Email Recipients
NOTIFICATION_EMAIL=${NOTIFICATION_EMAIL:-admin@example.com}
ZIXLY_EMAIL=your_email@domain.com
ZIXLY_FIRST_NAME=Your
ZIXLY_LAST_NAME=Name
ZIXLY_EMAIL_PASSWORD=your_email_password

# =============================================================================
# 7. MONITORING CONFIGURATION
# =============================================================================

GRAFANA_ADMIN_PASSWORD=your_grafana_password

# =============================================================================
# 8. EXTERNAL INTEGRATIONS
# =============================================================================

# pipeline Configuration
pipeline_BASIC_AUTH_USER=admin
pipeline_BASIC_AUTH_PASSWORD=your_pipeline_password
PIPELINE_BASIC_AUTH_ACTIVE=true

# Plane Configuration
PLANE_API_KEY=your_plane_api_key
PLANE_SECRET_KEY=your_plane_secret_key

# Nextcloud Configuration
NEXTCLOUD_ADMIN_PASSWORD=your_nextcloud_password

# Xero Integration
XERO_CLIENT_ID=your_xero_client_id
XERO_CLIENT_SECRET=your_xero_client_secret

# =============================================================================
# 9. SENTRY CONFIGURATION (Optional)
# =============================================================================

NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# =============================================================================
# 10. DEVELOPMENT CONFIGURATION
# =============================================================================

# Redis Configuration
REDIS_URL=redis://redis:6379/1
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info

# Worker Configuration
WORKER_CONCURRENCY=2

# Frontend Configuration (React App)
VITE_API_URL=http://localhost:8000
VITE_GRAPHQL_URL=http://localhost:8000/graphql
