# Zixly Environment Configuration Template
# Copy this file to .env.local and update with your actual values
# DO NOT commit .env.local to version control

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Node Environment
NODE_ENV=development

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_pipeline_URL=http://localhost:5678

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database Configuration (Required)
DATABASE_URL=postgresql://postgres:your_password@db.your-project-ref.supabase.co:5432/postgres
DIRECT_URL=postgresql://postgres:your_password@db.your-project-ref.supabase.co:5432/postgres

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Sentry Configuration (Optional - for error tracking)
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
SENTRY_ORG=your_sentry_org
SENTRY_PROJECT=your_sentry_project
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379

# Email Configuration (Optional)
ZIXLY_EMAIL=your_email@domain.com
ZIXLY_FIRST_NAME=Your
ZIXLY_LAST_NAME=Name
ZIXLY_EMAIL_PASSWORD=your_email_password

# SMTP Configuration (Optional)
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@domain.com
SMTP_PASSWORD=your_email_password

# Trading API Configuration (Optional)
TRADING_API_URL=http://localhost:8000
TRADING_API_KEY=your_trading_api_key

# AWS/LocalStack Configuration (Optional)
AWS_ENDPOINT_URL=http://localhost:4566
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# SQS Configuration (Optional)
SQS_QUEUE_URL=http://localhost:4566/000000000000/trading-sweep-jobs
NOTIFICATIONS_QUEUE_URL=http://localhost:4566/000000000000/notifications

# S3 Configuration (Optional)
S3_BUCKET_NAME=zixly-pipeline-data
TRADING_RESULTS_BUCKET=trading-results

# Secrets Manager (Optional)
TRADING_API_SECRET_NAME=trading-api-credentials
SMTP_SECRET_NAME=smtp-credentials
ZIXLY_DATABASE_SECRET_NAME=zixly-database-credentials

# Monitoring (Optional)
GRAFANA_ADMIN_PASSWORD=admin

# Development Configuration (Optional)
LOG_LEVEL=info
WORKER_CONCURRENCY=2
